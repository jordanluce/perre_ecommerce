<h3>Products</h3>
<% if @products.any? %>
  <table>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3">Actions</th>
    </tr>

    <% @products.each do |prod| %>  
      <tr>
        <td><%= prod.name %></td>
        <td><%= currency(prod.price) %></td>
        <td><%= link_to 'show', admin_product_path(prod.id) %></td>
        <td><%= link_to 'edit', edit_admin_product_path(prod.id) %></td>
        <td><%= link_to 'delete', admin_product_path(prod.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>There are no products to show</p>
<% end %>